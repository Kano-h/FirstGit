<div class="main posts-index">
  <div class="container">
    <h1>投稿一覧</h1>
    <% if @posts == [] %>
      <div>投稿はありません。</div>
    <%end %>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user_id}/show" ) %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}/show") %>
        </div>
      </div>
    <% end %>
  </div>
</div>